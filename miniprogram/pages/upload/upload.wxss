/* 新增全局样式 */
/* 页面容器 */
.container {
  padding: 20rpx;
  background: #f5f7fa;
}

/* 卡片基础样式 */
.notice-card, .example-card, .selector-card, .upload-card, .nutrition-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 注意事项样式 */
.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.notice-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 示例图片区域 */
.example-grid {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.example-item {
  text-align: center;
  width: 48%;
}

.example-item image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

/* 选择器组样式 */
.selector-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.meal-picker, .date-picker {
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx;
  width: 200rpx;
}

.child-btn {
  flex: 1;
  background: linear-gradient(135deg, #6b8dd6, #8e44ad);
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
}

/* 上传区域样式 */
.upload-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.upload-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.upload-item {
  width: 48%;
}

.upload-btn {
  width: 100%;
  height: 300rpx;
  padding: 0;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  background: #f8fafc;
  position: relative;
}

.upload-btn image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.upload-tip {
  position: absolute;
  bottom: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #666;
}

/* 描述输入区域 */
.description-area {
  margin: 20rpx 0;
}

.description-input {
  width: 100%;
  height: 160rpx;
  padding: 16rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8fafc;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #6b8dd6, #8e44ad);
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 0;
  margin-top: 30rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(106,141,214,0.3);
}

/* 营养信息展示 */
.nutrition-grid {
  margin-top: 20rpx;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.nutrition-item .label {
  color: #666;
  font-weight: 500;
}

.nutrition-item .value {
  color: #2c3e50;
  font-weight: bold;
}
.example-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.example-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.example-grid {
  display: flex;
  justify-content: space-around;
  gap: 30rpx;
}

.example-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.angle-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.image-row {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 16rpx;
}

.example-image {
  width: 280rpx;
  height: 280rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e5e7eb;
}

